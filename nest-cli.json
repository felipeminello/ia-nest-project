{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/nest-modular-monolith/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "webpackConfigPath": "webpack.config.js",
    "tsConfigPath": "apps/nest-modular-monolith/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/nest-modular-monolith",
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "nest-modular-monolith": {
      "type": "application",
      "root": "apps/nest-modular-monolith",
      "entryFile": "main",
      "sourceRoot": "apps/nest-modular-monolith/src",
      "compilerOptions": {
        "tsConfigPath": "apps/nest-modular-monolith/tsconfig.app.json"
      }
    },
    "products-service": {
      "type": "library",
      "root": "apps/products-service",
      "entryFile": "index",
      "sourceRoot": "apps/products-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/products-service/tsconfig.app.json"
      }
    },
    "users-service": {
      "type": "library",
      "root": "apps/users-service",
      "entryFile": "index",
      "sourceRoot": "apps/users-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/users-service/tsconfig.app.json"
      }
    }
  }
}