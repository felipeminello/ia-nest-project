{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/common": [
        "libs/common/src"
      ],
      "@app/common/*": [
        "libs/common/src/*"
      ],
      "@apps/nest-modular-monolith": [
        "apps/nest-modular-monolith/src"
      ],
      "@apps/nest-modular-monolith/*": [
        "apps/nest-modular-monolith/src/*"
      ],
      "@apps/products-service": [
        "apps/products-service/src"
      ],
      "@apps/products-service/*": [
        "apps/products-service/src/*"
      ],
      "@apps/users-service": [
        "apps/users-service/src"
      ],
      "@apps/users-service/*": [
        "apps/users-service/src/*"
      ],
      "@libs/*": [
        "libs/*"
      ]
    }
  }
}